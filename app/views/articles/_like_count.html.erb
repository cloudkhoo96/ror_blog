<p>Likes: <%= article.article_ratings_count %></p>
<% if user_signed_in? %>
  <% if (rating = article.article_ratings.find_by(user: current_user)) %>
    <%= button_to "Unlike", article_article_rating_path(article, rating), method: :delete, data: { turbo_stream: true } %>
  <% else %>
    <%= button_to "Like", article_article_ratings_path(article), method: :post, data: { turbo_stream: true } %>
  <% end %>
<% end %>