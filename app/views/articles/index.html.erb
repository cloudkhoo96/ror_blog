<h1>Articles</h1>
<p>Our blog has <%= pluralize(Article.public_count, "article", "articles") %> and counting!</p>
<%= link_to "New Article", new_article_path, class: "btn btn-secondary" %>
<div class="table-responsive m-3">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Content</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <% unless article.archived? %>
          <tr>
            <td><%= article.id %></td>
            <td><%= link_to article.title, article %></td>
            <td><%= article.body %></td>
            <td><%= link_to "Destroy", article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>